@model IEnumerable<ProjectTask>

@{
	ViewData["Title"] = "Tasks List";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
	<thead>
		<tr>
			<th>Task ID</th>
			<th>Title</th>
			<th>Description</th>
			<th>Project ID</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var task in Model)
		{
			<tr>
				<td>@task.ProjectTaskId</td>
				<td>@task.Title</td>
				<td>@task.Description</td>
				<td>@task.ProjectId</td>
				<td>
					<a asp-area="ProjectManagement" asp-controller="Tasks" asp-action="Details" asp-route-id="@task.ProjectTaskId" class="btn btn-info">Details</a>
					<a asp-area="ProjectManagement" asp-controller="Tasks" asp-action="Edit" asp-route-id="@task.ProjectTaskId" class="btn btn-secondary">Edit</a>
					<a asp-area="ProjectManagement" asp-controller="Tasks" asp-action="Delete" asp-route-id="@task.ProjectTaskId" class="btn btn-danger">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>

<a asp-area="ProjectManagement" asp-controller="Tasks" asp-action="Create" asp-route-projectId="@ViewBag.ProjectId" class="btn btn-primary">Create New Task</a>

<a asp-area="ProjectManagement" asp-controller="Projects" asp-action="Index" class="btn btn-secondary">Back to Projects</a>
