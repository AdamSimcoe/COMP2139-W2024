@model CarRental

@{
    ViewData["Title"] = "Delete";
}
<div class="delete-box">
    <h1>Delete Car Rental</h1>

    <h3>Are you sure you want to delete this car rental?</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.CarRentalMake)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.CarRentalMake)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.PricePerDay)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.PricePerDay)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Rating)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Rating)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.MaximumOccupancy)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.MaximumOccupancy)
            </dd>
        </dl>
    
        <form asp-action="DeleteConfirmed" asp-route-id="@Model.CarRentalId" method="post">
            <input type="hidden" asp-for="CarRentalId" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index">Back to List</a>
        </form>
    </div>
</div>
