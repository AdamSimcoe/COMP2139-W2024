@model Flight

@{
    ViewData["Title"] = "Delete";
}
<div class="delete-box">
    <h1>Delete Flight</h1>

    <h3>Are you sure you want to delete this flight?</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.FlightNumber)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.FlightNumber)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Origin)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Origin)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Destination)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Destination)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.DepartureDateTime)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.DepartureDateTime)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.ArrivalDateTime)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.ArrivalDateTime)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Price)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Rating)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Rating)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.MaximumOccupancy)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.MaximumOccupancy)
            </dd>
        </dl>
    
        <form asp-action="DeleteConfirmed" asp-route-id="@Model.FlightId" method="post">
            <input type="hidden" asp-for="FlightId" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index">Back to List</a>
        </form>
    </div>
</div>
