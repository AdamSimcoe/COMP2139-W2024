@model Hotel
@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService

@{
    ViewData["Title"] = "Details";
}
<div class="details-box">
    <h1>Hotel Details</h1>

    <div>
        <hr />
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.HotelName)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.HotelName)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.HotelLocation)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.HotelLocation)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.PricePerNight)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.PricePerNight)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Rating)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Rating)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.MaximumOccupancy)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.MaximumOccupancy)
            </dd>
        </dl>
    </div>
    <div>
        @if ((await AuthorizationService.AuthorizeAsync(User, "AdminAccess")).Succeeded)
        {
            <a asp-action="Edit" asp-route-id="@Model?.HotelId">Edit</a> 
        }
        <a asp-action="Index">Back to List</a>
    </div>
</div>
